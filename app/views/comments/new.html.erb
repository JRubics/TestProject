<%= form_for [ @post, @comment ] do |f| %>
  <ul>
  <% @comment.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :text, "Your comment" %><br/>
    <%= f.text_area :text %>
  </p>
  <%= f.hidden_field :post_id, :value => @comment.post_id %>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>